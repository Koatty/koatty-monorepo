{
  "name": "koatty-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Koatty Framework Monorepo",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "pkg:release": "bash scripts/release.sh",
    "pkg:release:minor": "bash scripts/release.sh",
    "pkg:release:major": "bash scripts/release.sh",
    "pkg:release:pre": "bash scripts/release.sh",
    "pkg:sync": "bash scripts/sync-standalone.sh"
  },
  "keywords": [
    "koatty",
    "monorepo",
    "typescript",
    "koa"
  ],
  "author": {
    "name": "richenlin",
    "email": "richenlin@gmail.com"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koatty/koatty-monorepo.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "standard-version": "^9.5.0",
    "turbo": "^2.5.8"
  }
}
