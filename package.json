{
  "name": "koatty-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Koatty Framework Monorepo",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "node scripts/build-base-packages.js && turbo run build",
    "build:base": "node scripts/build-base-packages.js",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "changeset": "changeset",
    "changeset:version": "changeset version && node scripts/commit-submodule-changes.js --no-push",
    "changeset:version:no-commit": "changeset version",
    "changeset:version:patch": "node scripts/create-and-version.js patch",
    "changeset:version:minor": "node scripts/create-and-version.js minor",
    "changeset:version:major": "node scripts/create-and-version.js major",
    "changeset:version:pre": "node scripts/create-and-version.js pre",
    "release": "pnpm build && node scripts/fix-workspace-versions.js && changeset publish && node scripts/commit-submodule-changes.js",
    "release:submodule": "cd packages/koatty && pnpm release",
    "release:dry-run": "node scripts/commit-submodule-changes.js --dry-run",
    "commit:submodules": "node scripts/commit-submodule-changes.js",
    "commit:submodules:no-push": "node scripts/commit-submodule-changes.js --no-push",
    "doctor": "node scripts/doctor.js"
  },
  "keywords": [
    "koatty",
    "monorepo",
    "typescript",
    "koa"
  ],
  "author": {
    "name": "richenlin",
    "email": "richenlin@gmail.com"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koatty/koatty-monorepo.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@swc/core": "^1.10.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "turbo": "^2.5.8",
    "typescript": "^5.7.3"
  }
}
