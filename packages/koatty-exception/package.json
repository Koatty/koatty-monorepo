{
  "name": "koatty_exception",
  "version": "2.1.3",
  "description": "Exception handler for koatty.",
  "scripts": {
    "build": "npm run build:js && npm run build:dts && npm run build:doc && npm run build:cp",
    "build:cp": "copyfiles package.json LICENSE README.md dist/ && node scripts/postBuild",
    "build:js": "npx -y rollup --bundleConfigAsCjs -c .rollup.config.js",
    "build:doc": "npx -y api-documenter markdown --input temp --output docs/api",
    "build:dts": "bash ../../scripts/build-dts.sh",
    "eslint": "eslint --ext .ts,.js ./",
    "lock": "npx -y del-cli --force node_modules && npm i --package-lock-only && npx -y pnpm i",
    "test": "npm run eslint && jest --passWithNoTests",
    "test:cov": "jest --collectCoverage --detectOpenHandles"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koatty/koatty_exception.git"
  },
  "keywords": [
    "web",
    "typescript",
    "framework",
    "mvc",
    "koa",
    "restful",
    "agile",
    "koatty_exception",
    "koatty",
    "exception",
    "error",
    "handler"
  ],
  "engines": {
    "node": ">10.0.0"
  },
  "author": {
    "name": "richenlin",
    "email": "richenlin@gmail.com"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/koatty/koatty_exception/issues"
  },
  "homepage": "https://github.com/koatty/koatty_exception",
  "maintainers": [
    {
      "name": "richenlin",
      "email": "richenlin@gmail.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.x.x",
    "@commitlint/config-conventional": "^19.x.x",
    "@grpc/grpc-js": "^1.x.x",
    "@microsoft/api-documenter": "^7.x.x",
    "@microsoft/api-extractor": "^7.x.x",
    "@rollup/plugin-commonjs": "^28.x.x",
    "@rollup/plugin-json": "^6.x.x",
    "@rollup/plugin-node-resolve": "^16.x.x",
    "@types/jest": "^29.x.x",
    "@types/koa": "^2.x.x",
    "@types/lodash": "^4.x.x",
    "@types/node": "^22.x.x",
    "@types/ws": "^8.x.x",
    "@typescript-eslint/eslint-plugin": "^8.x.x",
    "@typescript-eslint/parser": "^8.x.x",
    "copyfiles": "^2.x.x",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^28.x.x",
    "husky": "^4.x.x",
    "jest": "^29.x.x",
    "jest-html-reporters": "^3.x.x",
    "reflect-metadata": "^0.x.x",
    "rollup": "^4.x.x",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-typescript2": "^0.x.x",
    "ts-jest": "^29.x.x",
    "ts-node": "^10.x.x",
    "tslib": "^2.x.x",
    "typescript": "^5.x.x"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "koatty_container": "workspace:*",
    "koatty_lib": "workspace:*",
    "koatty_logger": "workspace:*"
  }
}
